<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center"
            android:text=" Update Product"
            android:textColor="#000"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/editProImage"
            android:layout_width="300dp"
            android:layout_height="164dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:src="@mipmap/ic_launcher" />

        <Spinner
            android:id="@+id/edit_Pro_Category_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/editProName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextstyle"
            android:gravity="center_horizontal"
            android:hint="Name"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"></Space>

        <EditText
            android:id="@+id/editProPrice"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextstyle"
            android:gravity="center_horizontal"

            android:hint="Price"

            android:textColor="@color/white"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"></Space>

        <Button
            android:id="@+id/Pro_edit_submit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btnstyle"
            android:backgroundTint="@color/SelectedIconsColor"
            android:text="Update "
            android:textColor="@color/white"
            android:textSize="25sp" />

    </LinearLayout>
</ScrollView>